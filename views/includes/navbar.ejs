<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }
  .search-btn i{
    display: inline;
    margin-right: 0.5rem;
  }
  .search-inp{
    border-radius: 25px;
    padding:0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
  }
  .country-select {
  max-width: 150px;
  font-size: 0.9rem;
}

@media (max-width: 768px) {
  form.d-flex {
    flex-wrap: wrap;
    gap: 10px;
  }

  .country-select,
  .search-inp,
  .search-btn {
    width: 100%;
